            <SellableItem identifier="flakcannonammobox" requiredtime="1" requiredmoney="130"
                fabricationlimitmin="0" fabricationlimitmax="4" />
            <SellableItem identifier="flakcannondirectionalammobox" requiredtime="1"
                requiredmoney="250"
                fabricationlimitmin="0" fabricationlimitmax="4" />


        </SimpleStore>
        <ItemContainer capacity="0" canbeselected="false" hideitems="true" slotsperrow="1"
            uilabel="" allowuioverlap="true" />
