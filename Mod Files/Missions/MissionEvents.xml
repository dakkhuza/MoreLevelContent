                                                target2tag="target_player"
                                                radius="100"
                                                waitforinteraction="false"
                                                disableiftargetincapacitated="false" />
                                            <SetDataAction identifier="construction_clowncorpse"
                                                value="4" />
                                            <GodModeAction
                                                targettag="construction_clowncorpse" enabled="false" />
