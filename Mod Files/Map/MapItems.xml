            <!-- Gun Ammo -->
            <SellableItem identifier="smgmagazine" requiredtime="1" requiredmoney="60"
                fabricationlimitmin="0" fabricationlimitmax="5" />
            <SellableItem identifier="revolverround" requiredtime="1" requiredmoney="10"
                fabricationlimitmin="0" fabricationlimitmax="25" />
            <SellableItem identifier="shotgunshell" requiredtime="1" requiredmoney="15"
                fabricationlimitmin="0" fabricationlimitmax="15" />
            <SellableItem identifier="riflebullet" requiredtime="1" requiredmoney="15"
                fabricationlimitmin="0" fabricationlimitmax="10" />


