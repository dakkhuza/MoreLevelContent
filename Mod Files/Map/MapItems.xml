                fabricationlimitmin="0" fabricationlimitmax="15" />

            <!-- Grenades -->
            <SellableItem identifier="40mmgrenade" requiredtime="1" requiredmoney="50"
                fabricationlimitmin="0" fabricationlimitmax="8" />
            <SellableItem identifier="40mmstungrenade" requiredtime="1" requiredmoney="55"
