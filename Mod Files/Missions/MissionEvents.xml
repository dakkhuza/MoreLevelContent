                                                waitforinteraction="false"
                                                disableiftargetincapacitated="false"
                                                applytotarget2="target_player" />
                                            <!-- Release the clown -->
                                            <AfflictionAction targettag="construction_clowncorpse"
                                                affliction="paralysis"
                                                strength="-200" />

                                            <!-- Make the clown go after the player that got too
                                            close -->
